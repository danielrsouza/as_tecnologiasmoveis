<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adicione_ativo"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Adicione Ativo"
        android:gravity="center"
        android:textSize="33dp"
        android:textColorHint="@android:color/black"/>

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner_moedas"
        android:layout_marginBottom="15dp"
        android:text="Selecione o Ativo"
        android:textSize="20dp"
        android:layout_marginLeft="128dp"/>

    <Spinner
        android:id="@+id/spinner_moedas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adicione_ativo"
        android:layout_marginBottom="-162dp"
        android:padding="30dp" />

    <Button
        android:id="@+id/salvar_ativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/spinner_moedas"
        android:layout_marginBottom="-182dp"
        android:text="SALVAR"/>


</RelativeLayout>